<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="TextViewStandard">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/DIMEN_20PX</item>
        <item name="android:paddingBottom">@dimen/DIMEN_20PX</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ButtonStandard">
        <item name="android:layout_width">@dimen/DIMEN_120PX</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/DIMEN_10PX</item>
        <item name="android:paddingRight">@dimen/DIMEN_10PX</item>
        <item name="android:paddingTop">@dimen/DIMEN_20PX</item>
        <item name="android:paddingBottom">@dimen/DIMEN_20PX</item>
        <item name="android:layout_marginLeft">@dimen/DIMEN_20PX</item>
        <item name="android:layout_marginRight">@dimen/DIMEN_20PX</item>
        <item name="android:layout_marginTop">@dimen/DIMEN_30PX</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#331133</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/border_rounded</item>
    </style>

    <style name="EditView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">40sp</item>
    </style>
</resources>
