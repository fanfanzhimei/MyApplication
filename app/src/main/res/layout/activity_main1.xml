<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#dfffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/DIMEN_360PX"
        android:layout_margin="@dimen/DIMEN_40PX"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/border_rounded_edittext">

        <EditText
            android:id="@+id/et_progress"
            style="@style/TextViewStandard"
            android:focusable="false"
            android:cursorVisible="false"
            android:background="@null"
            android:text=""
            android:layout_gravity="left" />

        <EditText
            android:id="@+id/et_input"
            style="@style/EditView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/DIMEN_240PX"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:focusable="false"
            android:cursorVisible="false"
            android:background="@null" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#efefef">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="6">

            <TextView
                android:id="@+id/tv_clear"
                style="@style/ButtonStandard"
                android:layout_column="0"
                android:layout_row="0"
                android:text="c" />

            <TextView
                android:id="@+id/tv_divided"
                style="@style/ButtonStandard"
                android:layout_column="1"
                android:layout_row="0"
                android:text="รท" />

            <TextView
                android:id="@+id/tv_multiply"
                style="@style/ButtonStandard"
                android:layout_column="2"
                android:layout_row="0"
                android:text="ร" />

            <RelativeLayout
                android:id="@+id/rl_delete"
                style="@style/ButtonStandard"
                android:layout_column="3"
                android:layout_row="0">

                <ImageView
                    android:layout_width="@dimen/DIMEN_60PX"
                    android:layout_height="@dimen/DIMEN_40PX"
                    android:background="@drawable/image_check" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_7"
                style="@style/ButtonStandard"
                android:layout_column="0"
                android:layout_row="1"
                android:text="7" />

            <TextView
                android:id="@+id/tv_8"
                style="@style/ButtonStandard"
                android:layout_column="1"
                android:layout_row="1"
                android:text="8" />

            <TextView
                android:id="@+id/tv_9"
                style="@style/ButtonStandard"
                android:layout_column="2"
                android:layout_row="1"
                android:text="9" />

            <TextView
                android:id="@+id/tv_minus"
                style="@style/ButtonStandard"
                android:layout_column="3"
                android:layout_row="1"
                android:text="-" />

            <TextView
                android:id="@+id/tv_4"
                style="@style/ButtonStandard"
                android:layout_column="0"
                android:layout_row="2"
                android:text="4" />

            <TextView
                android:id="@+id/tv_5"
                style="@style/ButtonStandard"
                android:layout_column="1"
                android:layout_row="2"
                android:text="5" />

            <TextView
                android:id="@+id/tv_6"
                style="@style/ButtonStandard"
                android:layout_column="2"
                android:layout_row="2"
                android:text="6" />

            <TextView
                android:id="@+id/tv_add"
                style="@style/ButtonStandard"
                android:layout_column="3"
                android:layout_row="2"
                android:text="+" />

            <TextView
                android:id="@+id/tv_1"
                style="@style/ButtonStandard"
                android:layout_column="0"
                android:layout_row="3"
                android:text="1" />

            <TextView
                android:id="@+id/tv_2"
                style="@style/ButtonStandard"
                android:layout_column="1"
                android:layout_row="3"
                android:text="2" />

            <TextView
                android:id="@+id/tv_3"
                style="@style/ButtonStandard"
                android:layout_column="2"
                android:layout_row="3"
                android:text="3" />

            <RelativeLayout
                android:id="@+id/rl_calcunator"
                style="@style/ButtonStandard"
                android:layout_column="3"
                android:layout_row="3"
                android:layout_rowSpan="2"
                android:layout_gravity="fill_vertical"
                android:background="@drawable/image_check_calcunator">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="="
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#ffffff" />

            </RelativeLayout>


            <TextView
                android:id="@+id/tv_0"
                style="@style/ButtonStandard"
                android:layout_column="0"
                android:layout_columnSpan="2"
                android:layout_gravity="fill_horizontal"
                android:layout_row="4"
                android:text="0" />

            <TextView
                android:id="@+id/tv_dot"
                style="@style/ButtonStandard"
                android:layout_column="2"
                android:layout_row="4"
                android:text="." />

        </GridLayout>
    </LinearLayout>
</LinearLayout>